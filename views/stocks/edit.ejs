<% include ../partials/header.ejs %>

<h2>UPDATE amount of stock</h2>

<form method="POST" action="/portfolios/<%= portfolio._id%>/stocks/<%= stock.id%>/?_method=PUT" >
  <div class="form-group">
    <label for="symbol">Name:</label>
      <input type="text" id="symbol" class="form-control" disabled value="<%= stock.symbol%>" >
  </div>
  <div class="form-group">
    <label for="name">Name:</label>
      <input type="text" id="name" class="form-control" disabled value="<%= stock.name %>" >
  </div>
  <div class="form-group">
    <label for="amount">Amount:</label>
      <input type="text" id="name" name="stock[amount]" class="form-control" value="<%= stock.amount%>" >
  </div>
  <div class="form-group">
    <input type="submit" value="UPDATE" class="btn btn-primary">
  </div>
</form>
<% include ../partials/footer.ejs %>
