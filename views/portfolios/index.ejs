<% include ../partials/header.ejs %>
<div class="ui breadcrumb">
  <div class="active section">Home</div>
</div>
<h1>Welcome to Portfolio Constructicon</h1>
<div style ='float:right'>
<a class="ui green button" href="/login"><i class="sign in icon"></i>sign in</a>
<a class="ui red button" href="/logout"><i class="sign out icon"></i>sign out</a>
<a class="ui blue button" href="/signup"><i class="add user icon"></i>sign Up</a>
</div>
<a class="ui green button" href="/portfolios/new"><i class="add circle icon"></i>Create a NEW Portfolio</a>

<table class="ui striped table">
  <thead>
    <th>Name</th>
    <th></th>
  </thead>
  <tbody>

  <% portfolios.forEach( function( portfolio ) { %>
    <tr>
      <td>
        <a href="/portfolios/<%= portfolio.id %>"><%= portfolio.name %></a>
      </td>
      <td style="text-align:right">
        <form  action="/portfolios/<%= portfolio.id %>/?_method=DELETE" method="post">
          <input class="circular ui icon button" style="background:red;color:white" type="submit" value="X">
        </form>
      </td>
    </tr>
  <% }) %>

  </tbody>
</table>
