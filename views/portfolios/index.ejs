<% include ../partials/header.ejs %>
<% include ../partials/menu.ejs %>

<div class="ui breadcrumb">
  <div class="active section">Home</div>
</div>

<h1>Welcome to ConStockicon</h1>

<a href="/portfolios/new"><button type="button" name="button" class="circular ui green button" ><i class="add circle icon"></i>Create a NEW Portfolio</button></a>

<table class="ui striped table">
  <thead>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </thead>
  <tbody>

  <% portfolios.forEach( function( portfolio ) { %>
    <tr>
      <td>
        <a href="/portfolios/<%= portfolio.id %>"><%= portfolio.name %></a>
      </td>
      <td style="text-align:right">
        <a href="/portfolios/<%= portfolio.id %>/stocks/new">
          <i class="add circle icon"></i>
          Add a stock
        </a>
      </td>
      <td style="text-align:right">
        <a href="/portfolios/<%= portfolio.id %>/edit">
          <i class="edit icon"></i>
          Edit Name
        </a>
      </td>
      <td style="text-align:right">
        <form  action="/portfolios/<%= portfolio.id %>/?_method=DELETE" method="post">
          <input class="circular ui icon button" style="background:red;color:white" type="submit" value="X">
        </form>
      </td>
    </tr>
  <% }) %>

  </tbody>
</table>
<% include ../partials/footer.ejs %>
